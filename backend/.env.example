# ============================
# DATABASE CONFIGURATION
# ============================
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/sqlhero

# ============================
# TELEGRAM BOT CONFIGURATION
# ============================
# Получить у @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_USERNAME=sql_hero_bot

# ============================
# JWT CONFIGURATION
# ============================
# Сгенерируйте случайную строку минимум 32 символа
# Например: openssl rand -hex 32
JWT_SECRET_KEY=super-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 дней

# ============================
# SANDBOX CONFIGURATION
# ============================
SANDBOX_ENABLED=true
SANDBOX_TIMEOUT_SECONDS=5
SANDBOX_MAX_RESULT_ROWS=1000

# MySQL для песочницы (должен иметь права на создание схем)
SANDBOX_MYSQL_HOST=localhost
SANDBOX_MYSQL_PORT=3306
SANDBOX_MYSQL_ADMIN_USER=root
SANDBOX_MYSQL_ADMIN_PASSWORD=rootpassword

# ============================
# CORS CONFIGURATION
# ============================
# Разделяйте запятыми для нескольких доменов
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# ============================
# APPLICATION CONFIGURATION
# ============================
ENVIRONMENT=development
DEBUG=true

# ============================
# OPTIONAL: WEBHOOK (для production)
# ============================
# TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/webhook
